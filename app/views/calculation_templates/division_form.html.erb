<h1>New division</h1>

<form action="/wizard_divide">
  <label for="first_field">Divide this:</label>
  <input type="text" id="first_field" name="first_num">

  <label for="second_field">by this:</label>
  <input type="text" id="second_field" name="second_num">

  <button>Divide!</button>

  <p>Your previous division was:
  <%= cookies.fetch(:div_first) %>
  /
  <%= cookies.fetch(:div_second) %>
  =
  <%= cookies.fetch(:div_result) %>
</form>
